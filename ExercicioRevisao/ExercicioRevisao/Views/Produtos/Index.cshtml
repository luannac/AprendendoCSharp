@model IEnumerable<ExercicioRevisao.Models.Produtos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Session["UserName"] != null)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @if (Session["UserName"] != null)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.idProdutos }) 
                @Html.ActionLink("Details", "Details", new { id = item.idProdutos })
                @Html.ActionLink("Delete", "Delete", new { id = item.idProdutos })
            }
            </td>
    </tr>
}

</table>
